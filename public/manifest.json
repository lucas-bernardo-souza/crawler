{
  "manifest_version": 3,
  "name": "Web Crawler",
  "version": "1.0",
  "description": "Rastreia as p√°ginas de um site para gerar um mapa de componentes em XML.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "18": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/jquery.js", "libs/filesaver.js", "content.js", "crawler.js", "tracer.js"]
    }
  ],
  "icons": {
    "18": "icons/icon.png"
  }
}